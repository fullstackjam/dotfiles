[user]
	name = fullstackjam
	email = fullstackjam@outlook.com

[core]
    editor = nvim
    autocrlf = input
    safecrlf = false

[init]
    defaultBranch = main

[push]
    default = simple

[pull]
    rebase = false

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk
    lg = log --oneline --decorate --graph --all
    amend = commit --amend --no-edit
    undo = reset HEAD~1
    wip = commit -am "WIP"
    unwip = reset HEAD~1

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[merge]
    tool = vimdiff

[diff]
    tool = vimdiff

[rerere]
    enabled = true

[help]
    autocorrect = 1

[credential]
    helper = osxkeychain
